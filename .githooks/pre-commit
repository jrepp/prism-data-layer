#!/bin/bash
#
# Pre-commit hook for Prism documentation validation
#
# Validates markdown files for:
# - YAML frontmatter format
# - Link validity
# - Formatting issues
#
# To install: git config core.hooksPath .githooks
#

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "üîç Running documentation validation..."

# Check if any markdown files are being committed
MARKDOWN_FILES=$(git diff --cached --name-only --diff-filter=ACMR | grep -E '\.(md|mdx)$' || true)

if [ -z "$MARKDOWN_FILES" ]; then
    echo "${GREEN}‚úì${NC} No markdown files changed"
    exit 0
fi

echo "üìù Checking markdown files:"
echo "$MARKDOWN_FILES" | sed 's/^/  - /'

# Run validation
if uv run tooling/validate_docs.py; then
    echo "${GREEN}‚úì${NC} All documentation valid!"
    exit 0
else
    echo ""
    echo "${RED}‚úó Documentation validation failed${NC}"
    echo ""
    echo "Fix the errors above or bypass with:"
    echo "  git commit --no-verify"
    exit 1
fi
